<Window x:Class="Projekt2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="400">
        <Grid.Background>
            <ImageBrush ImageSource="/ekrankino.jpg"/>
        </Grid.Background>
        <Label x:Name="FilotekaTytul" Content="Witamy w Filmotece" HorizontalAlignment="Center" Height="100" Margin="0,277,0,0" VerticalAlignment="Top" Width="708" FontSize="72" FontWeight="Bold" Foreground="#FFD4D0D0"/>
        <Button x:Name="Filmprzycisk" Content="Film" HorizontalAlignment="Left" Height="69" Margin="10,75,0,0" VerticalAlignment="Top" Width="138" FontSize="48" FontWeight="Bold" Foreground="#FFFCFBFB">
            <Button.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0.036"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF7E7E7E" Offset="0.578"/>
                    <GradientStop Color="#FF7D7D7D" Offset="0.576"/>
                </RadialGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
