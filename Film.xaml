<Window x:Class="Projekt2._0.Film"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt2._0"
        mc:Ignorable="d"
        Title="Film" Height="465" Width="785" Loaded="Window_Loaded">
    <Window.Resources>
        <local:masterFilmoteka x:Key="masterFilmoteka"/>
        <CollectionViewSource x:Key="filmyViewSource" Source="{Binding Filmy, Source={StaticResource masterFilmoteka}}"/>
    </Window.Resources>
    <Grid Margin="0,0,10,-6" DataContext="{StaticResource filmyViewSource}">
        <Grid.Background>
            <ImageBrush ImageSource="/kinotło.jpg"/>
        </Grid.Background>
        <Label x:Name="FilmyTytul" Content="Filmy do obejrzenia" HorizontalAlignment="Center" Height="121" Margin="0,42,0,0" VerticalAlignment="Top" Width="716" FontSize="72" FontWeight="Bold" Foreground="Black"/>
        <DataGrid HorizontalAlignment="Left" Height="217" Margin="42,168,0,0" VerticalAlignment="Top" Width="473" ItemsSource="{Binding}"/>
        <Button x:Name="PowrótFilm" Content="Jednak może serial ?" HorizontalAlignment="Left" Height="19" Margin="571,405,0,0" VerticalAlignment="Top" Width="155" Foreground="#FFFEF9F9" Background="#FF0B0A0A" Click="PowrótFilm_Click"/>

    </Grid>
</Window>
